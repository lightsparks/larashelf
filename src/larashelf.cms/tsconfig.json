{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "useDefineForClassFields": true,
        "types": [ "vite/client", "node" ]
    },
    "include": [ "resources/js/**/*.ts", "resources/js/**/*.vue" ]
}
